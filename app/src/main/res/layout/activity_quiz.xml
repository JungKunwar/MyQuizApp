<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QuizActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. In which decade was the American Institute of Electrical Engineers (AIEE) founded?"
        android:textColor="#2196F3" />

    <RadioGroup 
        android:id="@+id/rd_One"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/Eighteen_Fifty_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1850s"/>

        <RadioButton
            android:id="@+id/Eighteen_Eighty_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1880s"/>

        <RadioButton
            android:id="@+id/Nineteen_Thirty_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1930s"/>

        <RadioButton
            android:id="@+id/Nineteen_Fifty_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1950s"/>
    </RadioGroup>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. What is part of a database that holds only one type of information?"
        />

    <RadioGroup
        android:id="@+id/rd_Two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/Report_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Report"/>

        <RadioButton
            android:id="@+id/Field_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Field"/>

        <RadioButton
            android:id="@+id/Record_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record"/>

        <RadioButton
            android:id="@+id/File_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. 'OS' computer abbreviation usually means?"
        />
    <EditText
        android:id="@+id/OS_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. In which decade with the first transatlantic radio broadcast occur?"
        />

    <RadioGroup
        android:id="@+id/rd_Three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:id="@+id/Eighteen_Fifty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1850s"/>

        <RadioButton
            android:id="@+id/Eighteen_Sixty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1860s"/>

        <RadioButton
            android:id="@+id/Eighteen_Seventy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1870s"/>

        <RadioButton
            android:id="@+id/Nineteen_zero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1900s"/>
    </RadioGroup>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. '.MOV' extension refers usually to what kind of file?"
        />
    <CheckBox
        android:id="@+id/Image_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image file"
    />
    <CheckBox
        android:id="@+id/Movie_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animation/movie file"
        />
    <CheckBox
        android:id="@+id/Audio_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio file"
        />
    <CheckBox
        android:id="@+id/All_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All of the above"
        />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>
</ScrollView>